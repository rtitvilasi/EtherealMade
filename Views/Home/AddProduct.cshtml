@model EtherealMadeFin.Models.Product

<div id="tab1" class="w-container  city">
    <div class="set-container">
        <div class="container-contact100">
            <h1>
                Post A Category
            </h1>
            <form class="contact100-form validate-form"
                  asp-action="AddProductModule" method="post" id="createProductCategory" enctype="multipart/form-data">

                <div class="wrap-input100 validate-input" data-validate="Name is required">
                    <label asp-for="ProductTitle" class="label-input100">Topic</label>
                    <input class="input100" type="text" asp-for="ProductTitle" placeholder="Product Title" required>
                    <span class="focus-input100" asp-validation-for="ProductTitle"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <label asp-for="ProductDescription" class="label-input100">Desciption</label>
                    <textarea asp-for="ProductDescription" class="input100" placeholder="Description" required></textarea>
                    <span class="focus-input100" asp-validation-for="ProductDescription"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <label asp-for="ProductSubTitle" class="label-input100">Subtitle</label>
                    <textarea asp-for="ProductSubTitle" class="input100" placeholder="Product subtitle" required></textarea>
                    <span class="focus-input100" asp-validation-for="ProductSubTitle"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <label asp-for="ProductImage" class="label-input100">Image</label>
                    <textarea asp-for="ProductImage" class="input100" placeholder="ImageUrl" required></textarea>
                    <span class="focus-input100" asp-validation-for="ProductImage"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <label asp-for="ProductPrice" class="label-input100">Pricec</label>
                    <textarea asp-for="ProductPrice" class="input100" placeholder="ImageUrl" required></textarea>
                    <span class="focus-input100" asp-validation-for="ProductPrice"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <label asp-for="ProductWeight" class="label-input100">Weight</label>
                    <textarea asp-for="ProductWeight" class="input100" placeholder="Weight" required></textarea>
                    <span class="focus-input100" asp-validation-for="ProductWeight"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <label asp-for="ProductThemeColour" class="label-input100">colour</label>
                    <textarea asp-for="ProductThemeColour" class="input100" placeholder="Weight" required></textarea>
                    <span class="focus-input100" asp-validation-for="ProductThemeColour"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <label asp-for="CheckoutLink" class="label-input100">Link</label>
                    <textarea asp-for="CheckoutLink" class="input100" placeholder="Weight" required></textarea>
                    <span class="focus-input100" asp-validation-for="CheckoutLink"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <label asp-for="Module1Title" class="label-input100">Module 1 Title</label>
                    <textarea asp-for="Module1Title" class="input100" placeholder="Module 1 Title" required></textarea>
                    <span class="focus-input100" asp-validation-for="Module1Title"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <label asp-for="Module1Description" class="label-input100">Module 1 Description</label>
                    <textarea asp-for="Module1Description" class="input100" placeholder="Weight" required></textarea>
                    <span class="focus-input100" asp-validation-for="Module1Description"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <label asp-for="Module1Image" class="label-input100">Module 1 Image</label>
                    <textarea asp-for="Module1Image" class="input100" placeholder="Weight" required></textarea>
                    <span class="focus-input100" asp-validation-for="Module1Image"></span>
                </div>
                <input asp-for="Productcategory.CategoryId" type="hidden" />
                <div class="container-contact100-form-btn">
                    <button type="submit" id="newFormBtn" class="contact100-form-btn">
                        <span>
                            Submit
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </form>
        </div>
        <div id="dropDownSelect1"></div>
    </div>
</div>

