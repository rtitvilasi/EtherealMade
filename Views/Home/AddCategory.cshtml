@model  EtherealMadeFin.Models.ProductCategory

<div id="tab1" class="w-container  city">
    <div class="set-container">
        <div class="container-contact100">
            <h1>
                Post A Category
            </h1>
            <form class="contact100-form validate-form"
                  asp-action="AddProductCategory" method="post" id="createProductCategory" enctype="multipart/form-data">

                <div class="wrap-input100 validate-input" data-validate="Name is required">
                    <label asp-for="CategoryTitle" class = "label-input100">Topic</label>
                    <input class="input100" type="text" asp-for="CategoryTitle" placeholder="Category Title" required>
                    <span class="focus-input100" asp-validation-for="CategoryTitle"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <label asp-for="CategoryDescription" class="label-input100">Desciption</label>
                    <textarea asp-for="CategoryDescription" class="input100" placeholder="Description" required></textarea>
                    <span class="focus-input100" asp-validation-for="CategoryDescription"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <label asp-for="CategoryExtraDescription" class="label-input100">Desciption</label>
                    <textarea asp-for="CategoryExtraDescription" class="input100" placeholder="Extra Description" required></textarea>
                    <span class="focus-input100" asp-validation-for="CategoryExtraDescription"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Message is required">
                    <label asp-for="CategoryImageUrl" class="label-input100">Desciption</label>
                    <textarea asp-for="CategoryImageUrl" class="input100" placeholder="ImageUrl" required></textarea>
                    <span class="focus-input100" asp-validation-for="CategoryImageUrl"></span>
                </div>
                <div class="container-contact100-form-btn">
                    <button type="submit" id="newFormBtn" class="contact100-form-btn">
                        <span>
                            Submit
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </form>
        </div>
        <div id="dropDownSelect1"></div>
    </div>
</div>

